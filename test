
//A

int count;
do {
    count = Integer.parseInt(JOptionPane.showInputDialog("عدد التكرار"));

    if (count > 0) {
        for (int i = 0; i < count; i++) {
            System.out.print("Welcome to the first exam\n");
        }
    } else {
        JOptionPane.showMessageDialog(null, "الرجاء ادخال قيمة أكبر من 0");
    }
} while (count <= 0);

//

int from;
int to;
do {
    from = Integer.parseInt(JOptionPane.showInputDialog("من"));

    if (from <= 0) {
        JOptionPane.showMessageDialog(null, "الرجاء ادخال قيمة أكبر من 0");
    }

} while (from <= 0);

do {
    to = Integer.parseInt(JOptionPane.showInputDialog("الى"));

    if (to <= 0) {
        JOptionPane.showMessageDialog(null, "الرجاء ادخال قيمة أكبر من 0");
    }

} while (from <= 0 || to <= 0);

if (from == to) {
    JOptionPane.showMessageDialog(null, "القيمتين متشابهه");
} else {
    while (from <= to) {
        if (from % 2 == 1) {
            System.out.print(from + ", ");
        }
        from++;
    }
}

//

int choice;
int number;

do {
    number = Integer.parseInt(JOptionPane.showInputDialog("ادخل الرقم"));

    if (number < 0) {
        JOptionPane.showMessageDialog(null, "الرجاء ادخال قيمة أكبر من 0");
    }

} while (number <= 0);

do {
    choice = Integer.parseInt(JOptionPane.showInputDialog("1 - للحصول على الجذر التربيعي للرقم المدخل\n"
            + "2 - للحصول على القيمة المطلقة للرقم المدخل\n"
            + "3 - للحصول على تقريب للرقم المدخل الى أقرب رقم أقل\n"
            + "4 - للحصول على تقريب للرقم المدخل الى اقرب رقم أكبر"));

    if (choice <= 0 || choice > 4) {
        JOptionPane.showMessageDialog(null, "Error");
    }

} while (choice < 1 || choice > 4);

switch (choise) {
    case 1:
        JOptionPane.showMessageDialog(null, Math.sqrt(number));
        break;
    case 2:
        JOptionPane.showMessageDialog(null, Math.abs(number));
        break;
    case 3:
        JOptionPane.showMessageDialog(null, Math.ceil(number));
        break;
    case 4:
        JOptionPane.showMessageDialog(null, Math.floor(number));
        break;
}











