// 
int nor;
do {
    nor = Integer.parseInt(JOptionPane.showInputDialog("Number of Repetitions"));

    if (nor > 0) {
        for (int i = 0; i < count; i++) {
            System.out.print("Welcome to the first exam\n");
        }
    } else {
        JOptionPane.showMessageDialog(null, "Enter number larger than 0");
    }
} while (nor <= 0);

// 
int fromNumber;
int toNumber;
do {
    fromNumber = Integer.parseInt(JOptionPane.showInputDialog("From Number"));

    if (fromNumber <= 0) {
        JOptionPane.showMessageDialog(null, "Enter number larger than 0");
    }

} while (fromNumber <= 0);

do {
    toNumber = Integer.parseInt(JOptionPane.showInputDialog("To Number"));

    if (toNumber <= 0) {
        JOptionPane.showMessageDialog(null, "Enter number larger than 0");
    }

} while (toNumber <= 0);

if (fromNumber == toNumber) {
    JOptionPane.showMessageDialog(null, "the numbers are equal!");
} else {
    while (fromNumber <= toNumber) {
        if (fromNumber % 2 == 1) {
            System.out.print(fromNumber + ", ");
        }
        fromNumber++;
    }
}

// 
int option;
int number;

do {
    number = Integer.parseInt(JOptionPane.showInputDialog("Enter Number"));

    if (number < 0) {
        JOptionPane.showMessageDialog(null, "Enter number larger than 0");
    }

} while (number <= 0);

do {
    option = Integer.parseInt(JOptionPane.showInputDialog("1 - To get the sqrt for the number\n"
            + "2 - To get the abs for the number\n"
            + "3 - To get the ceil for the number\n"
            + "4 - To get the floor for the number"));

    if (option <= 0 || option > 4) {
        JOptionPane.showMessageDialog(null, "Error");
    }

} while (option < 1 || option > 4);

switch (option) {
    case 1:
        JOptionPane.showMessageDialog(null, Math.sqrt(number));
        break;
    case 2:
        JOptionPane.showMessageDialog(null, Math.abs(number));
        break;
    case 3:
        JOptionPane.showMessageDialog(null, Math.ceil(number));
        break;
    case 4:
        JOptionPane.showMessageDialog(null, Math.floor(number));
        break;
}
